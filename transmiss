    <h2 class="text-lg font-semibold mb-2">Ajude com um Pix</h2>
    <img src="qr-code-pix.png" alt="QR Code Pix" class="w-32 h-32 mx-auto mb-2" />
    <p class="text-sm break-all" id="chave-pix">seuemail@pix.com</p>
    <button onclick="copiarPix()" class="mt-2 px-3 py-1 bg-purple-600 text-white rounded hover:bg-purple-700 transition">Copiar chave</button>
  </div>

  <script>
    function copiarPix() {
      const chave = document.getElementById('chave-pix').textContent;
      navigator.clipboard.writeText(chave).then(() => {
        alert('Chave Pix copiada!');
      });
    }
  </script>

